<div class="container my-3">
    <h2>Add Note</h2>
    <form method="post" action="/api/add">
        <div class="form-group">
            <label for="title">Note title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{this.note.title}}">
        </div>
        <div class="form-group">
            <label for="description">Note description</label>
            <textarea rows="3" class="form-control" id="description" name="description">{{this.note.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>